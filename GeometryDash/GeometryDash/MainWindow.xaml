<Window x:Class="GeometryDash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeometryDash"
        xmlns:res="clr-namespace:GeometryDash.Res"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="Height" Width="1280">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch" Background="LightGray" Orientation="Horizontal" >
            <Button x:Name="ButtonPlay" Content="Play" Margin="50 10" Padding="6" Width="200" Click="Play"/>
            <Slider x:Name="SliderSound" 
                    Minimum="0" 
                    Maximum="100" 
                    Margin="50 10" 
                    Padding="6" 
                    Width="200"
                    ValueChanged="SliderSound_OnValueChanged"/>
        </StackPanel>
        <Canvas x:Name="Canvas" Background="Red" Height="720" Width="1280" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        
    </DockPanel>
</Window>
